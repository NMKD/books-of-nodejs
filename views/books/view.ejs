<!DOCTYPE html>
<html lang="ru">
  <%- include('../partials/header.ejs', {title: title}) %> <%-
  include('../partials/menu') %>
  <body>
    <div class="container">
      <h1 class="display-4 my-5"><%= title %></h1>
      <div class="row">
        <div class="col-sm-8">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= book.title %></h5>
              <p class="card-text">Описание: <%= book.description %></p>

              <div class="text-right">
                <a
                  class="btn btn-sm btn-primary"
                  href="/api/book/update/<%= book.id %>"
                >
                  <i class="fa fa-pencil" aria-hidden="true"></i>
                </a>
                <form
                  action="/api/books/<%= book.id %>"
                  method="delete"
                  class="d-inline"
                >
                  <button class="btn btn-sm btn-danger">
                    <i class="fa fa-trash" aria-hidden="true"></i>
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include('../partials/scripts.ejs') %>
  </body>
</html>
